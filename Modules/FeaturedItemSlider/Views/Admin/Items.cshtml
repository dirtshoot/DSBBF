@{
    Layout.Title = "Featured Items";
}

@if (Model.NumberOfItems > 0) {
    using (Html.BeginFormAntiForgeryPost(Url.Action("List", "Admin", new { area = "Contents", id = "" })))
    {
        <fieldset class="contentItems bulk-items">
            @Display(Model.ContentItems)
        </fieldset>
    }
} else {
    <p>You have not yet created any featured items. Create a @Html.ActionLink("new featured item", "Create", "Admin", new { area = "Contents", id = "FeaturedItem" }, null) now.</p>
}